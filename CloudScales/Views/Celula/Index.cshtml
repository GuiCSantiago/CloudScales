@model List<CelulaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-white">Listagem de Celulas</h2>
<a class="btn btn-light my-3" href="/celula/create">Novo Registro</a>
<table class="table table-responsive text-white">
    <tr>
        <th>ID</th>
        <th>EquipamentoID</th>
        <th>Peso</th>
        <th>Posicao</th>
        <th>Ações</th>
    </tr>
    @foreach (var celula in Model)
    {
        <tr>
            <td>@celula.Id</td>
            <td>@celula.EquipamentoID</td>
            <td>@celula.Peso</td>
            <td>@celula.Posicao</td>
            <td>
                <a href="/celula/Edit?id=@celula.Id"><img src="~/img/edit.png" style="width: 35px;" /></a>
                <a onclick="deleteFunction(@celula.Id)"><img src="~/img/delete.png" style="width: 35px;" /></a>
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td>
                Nenhum registro encontrado.
            </td>
        </tr>
    }

</table>

<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script>
    function deleteFunction(id) {
        swal({
            title: 'Excluir Célula?',
            text: "Todos os dados dessa célula serão excluídos!",
            icon: 'warning',
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {
                location.href = 'celula/Delete?id=' + id;
            }
        });
    }
</script>