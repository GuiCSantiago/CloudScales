@model CelulaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Celulas</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Id" class="control-label">Id</label>
            <input asp-for="Id" class="form-control" readonly />
            <br />
            <label for="EquipamentoID" class="control-label">EquipamentoID</label>
            <input asp-for="EquipamentoID" class="form-control" />
            <span asp-validation-for="EquipamentoID" class="text-danger"></span>
            <br />
            <label for="Peso" class="control-label">Peso</label>
            <input asp-for="Peso" class="form-control" />
            <span asp-validation-for="Peso" class="text-danger"></span>
            <br />
            <label for="Posicao" class="control-label">Posicao</label>
            <input asp-for="Posicao" class="form-control" />
            <span asp-validation-for="Posicao" class="text-danger"></span>
            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>