@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset id="areaFiltro" class="form-group border-0 px-0 mx-0">
    <legend class="text-white">Buscar Equipamento</legend>
    <div class="row">
        <div class="col-lg-4">
            <label class="font-weight-bold text-white">ID Caminhão</label>
            <input type="number" id="CaminhaoID" class="form-control" />
        </div>
        <div class="col-lg-3">
            <label class="font-weight-bold text-white">Qtd Balança</label>
            <input type="number" id="QtdBalanca" class="form-control" />
        </div>
        <div class="col-lg-1">
            <input type="button" id="btnFiltro" class="btn btn-light position-absolute" style="bottom: 0; right: 0" value="Buscar" onclick="aplicaFiltroConsultaAvancadaEquipamento()" />
        </div>
    </div>
</fieldset>

<div id="resultadoConsultaEquipamento" class="table-responsive">
</div>