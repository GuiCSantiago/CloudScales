@model List<CaminhaoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
<h2>Listagem de Caminhões</h2>
<a href="/caminhao/create">Novo Registro</a>
<br />
<table class="table table-responsive">
    <tr>

        <th>Id</th>
        <th>ClienteID</th>
        <th>Placa do veículo</th>
        <th>Placa da carreta</th>
        <th>Ações</th>
    </tr>
    @foreach (var caminhao in Model)
    {
        <tr>
            <td>@caminhao.Id</td>
            <td>@caminhao.ClienteID</td>
            <td>@caminhao.Placa</td>
            <td>@caminhao.Carreta</td>
            <td>
                <a href="/caminhao/Edit?id=@caminhao.Id">Editar</a>
                <a href="javascript:apagarCaminhao(@caminhao.Id)">Apagar</a>
            </td>
        </tr>
    }
</table>
<script>
    function apagarCaminhao(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'caminhao/Delete?id=' + id;
    }
</script>