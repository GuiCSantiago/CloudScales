@model List<CaminhaoViewModel>

<table class="table table-responsive text-white">
    <tr>
        <th>Placa do veículo</th>
        <th>Placa da carreta</th>
        <th>Ações</th>
    </tr>
    @if (Model.Count() > 0)
    {
        @foreach (var caminhao in Model)
        {
            <tr>
                <td>@caminhao.Placa</td>
                <td>@caminhao.Carreta</td>
                <td>
                    <a href="/caminhao/Edit?id=@caminhao.Id"><img src="~/img/edit.png" style="width: 35px;" /></a>
                    <a href="javascript:apagarCaminhao(@caminhao.Id)"><img src="~/img/delete.png" style="width: 35px;" /></a>
                    <a href="/Dashboard?id=@caminhao.Id"><img src="~/img/dash.png" style="width: 35px;" /></a>
                </td>
            </tr>
        }
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td>
                Nenhum registro encontrado.
            </td>
        </tr>
    }

</table>